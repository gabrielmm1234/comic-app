<div class="comics-header-container header row">
    <%= image_tag("marvel_logo.png", :alt => "Marvel Logo", :class => "center image") %>
    <%= form_with url: "/comics", method: :get do |form| %>
        <%= form.text_field :name, placeholder: "search", class: 'center comic-input' %>
    <% end %>
</div>

<div class="body row scroll-y container grid-container">
    <% @comics.each do |comic| %>
        <%= image_tag(comic.image, :class => "grid-item") %>
    <% end %>
</div>

<div class="footer row container">


<%= button_to 'PREVIOUS PAGE', {:controller => "comics", :action => "index"}, {id: 'previous-button', class: 'left-button button', :method=>:get, params: {:page => @filter_params.page - 1, :name => @filter_params.name}} %>
<%= button_to 'NEXT PAGE', {:controller => "comics", :action => "index"}, {id: 'next-button', class: 'right-button button', :method=>:get, params: {:page => @filter_params.page + 1, :name => @filter_params.name}} %>
</div>